<UserControl x:Class="WpfNotesApp.TrackerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfNotesApp" 
             xmlns:viewmodels="clr-namespace:WpfNotesApp.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:TrackerViewModel}"
             mc:Ignorable="d" >
    <Border BorderBrush="#FF444444" BorderThickness="0,0,0,1" Padding="2,2,2,2">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Border CornerRadius="10" Background="#FF2E2E2E" BorderBrush="#FF444444" BorderThickness="1">
                <Grid Margin="2,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Button Grid.Column="0" Content="-" BorderThickness="0" 
                            Command="{Binding DecreaseRoomsSoldCommand}"/>
                    <StackPanel Grid.Column="1"  Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBox Grid.Row="0" Width="Auto" BorderThickness="0" FontSize="45" FontWeight="Bold" HorizontalAlignment="Center" 
                                 Text="{Binding RoomsSoldCount}" />
                        <TextBlock Grid.Row="1" Text="Rooms Sold" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <Button Grid.Column="2" Content="+" BorderThickness="0" 
                            Command="{Binding IncreaseRoomsSoldCommand}"/>
                </Grid>
            </Border>
            
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">

                <Border CornerRadius="10" Background="#FF2E2E2E" BorderBrush="#FF444444" BorderThickness="1" Margin="2,2,2,2">
                    <Grid Margin="2,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="20"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Button Grid.Column="0" Content="-" BorderThickness="0" 
                            Command="{Binding DecreaseAdultsCommand}"/>
                        <StackPanel Grid.Column="1"  Orientation="Vertical" HorizontalAlignment="Center">
                            <TextBox Grid.Row="0" Width="Auto" BorderThickness="0" FontWeight="Bold" HorizontalAlignment="Center" 
                                 Text="{Binding AdultsCount}" />
                            <TextBlock Grid.Row="1" Text="Adults" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <Button Grid.Column="2" Content="+" BorderThickness="0" 
                            Command="{Binding IncreaseAdultsCommand}"/>
                    </Grid>
                </Border>

                <Border CornerRadius="10" Background="#FF2E2E2E" BorderBrush="#FF444444" BorderThickness="1" Margin="2,2,2,2">
                    <Grid Margin="2,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="20"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Button Grid.Column="0" Content="-" BorderThickness="0" 
                            Command="{Binding DecreaseChildrenCommand}"/>
                        <StackPanel Grid.Column="1"  Orientation="Vertical" HorizontalAlignment="Center">
                            <TextBox Grid.Row="0" Width="Auto" BorderThickness="0" FontWeight="Bold" HorizontalAlignment="Center" 
                                 Text="{Binding ChildrenCount}" />
                            <TextBlock Grid.Row="1" Text="Child" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <Button Grid.Column="2" Content="+" BorderThickness="0"  
                            Command="{Binding IncreaseChildrenCommand}"/>
                    </Grid>
                </Border>
            </StackPanel>




            <Border CornerRadius="10" Background="#FF2E2E2E" BorderBrush="#FF444444" BorderThickness="1">
                <Grid Margin="2,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Button Grid.Column="0" Content="-" BorderThickness="0"
                            Command="{Binding DecreaseArrivalsCommand}"/>
                    <StackPanel Grid.Column="1"  Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBox Grid.Row="0" Width="Auto" BorderThickness="0" FontSize="45" FontWeight="Bold" HorizontalAlignment="Center" 
                                 Text="{Binding ArrivalsCount}" />
                        <TextBlock Grid.Row="1" Text="Arrivals" HorizontalAlignment="Center"/>
                    </StackPanel>
                    <Button Grid.Column="2" Content="+" BorderThickness="0"  
                            Command="{Binding IncreaseArrivalsCommand}"/>
                </Grid>
            </Border>
        </StackPanel>
    </Border>
</UserControl>