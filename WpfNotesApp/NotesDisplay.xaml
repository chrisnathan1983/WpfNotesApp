<UserControl x:Class="WpfNotesApp.NotesDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfNotesApp"
             xmlns:vm="clr-namespace:WpfNotesApp.ViewModels"
             xmlns:ap="clr-namespace:WpfNotesApp.AttachedProperties"
             d:DataContext="{d:DesignInstance Type=vm:NotesDisplayViewModel}"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="#FF2E2E2E" BorderBrush="Gray" BorderThickness="2" CornerRadius="4" Margin="2,2,2,2">
            <StackPanel Orientation="Vertical">
                <TextBox Text="#UntaggedNotes"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="20,0,0,0"
                           HorizontalAlignment="Left"
                           Foreground="White"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Notes}"
                          AllowDrop="True"
                          Drop="NotesItemsControl_Drop"
                          PreviewMouseMove="NotesItemsControl_PreviewMouseMove">

                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:NoteViewModel}">
                                <local:NoteView />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                <TextBox Text="{Binding NewNoteText, UpdateSourceTrigger=PropertyChanged}"
                     Height="50"
                     VerticalAlignment="Center"
                     Margin="20,0,20,0"
                     Style="{StaticResource {x:Type TextBox}}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding NewNoteCommand}" />
                        <KeyBinding Key="Tab" Command="{Binding NewNoteCommand}" />
                    </TextBox.InputBindings>
                </TextBox>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>